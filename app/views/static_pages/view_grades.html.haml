.panel.panel-default.center
  .panel-heading
    %h3.panel-title.text-left 3x = 10-4
    %a.btn.btn-default.pull-right.btn-xs.viewGradeBtnAdjust{:href => "#"} Petition      
  .panel-body
    .row
    %h5.text-center.teacherPetitionProblem 2x = 12 - 4
    .row
    .col-md-1
    .col-md-5.quiz-problem
      %ul.list-group
        %li.list-group-item.clearfix
          %h5.text-center Solution Submitted
          %p 1. 2x=12-4
          %p 2. 2x=8
          %p 3. x=4
        %li.list-group-item.clearfix.studentSolRight
          %h5.text-center Answer
          x=4
    .col-md-5.quiz-problem
      %ul.list-group
        %li.list-group-item.clearfix
          %h5.text-center Answer Key
          %p 1. 2x=12-4
          %p 2. 2x=8
          %p 3. x=4
        %li.list-group-item.clearfix.answerKey
          %h5.text-center Answer
          x=4


